<footer class="site-footer">
  <div class="container footer-grid">
    <div>
      <p class="footer-title">{{ settings.footer_title }}</p>
      <p class="footer-text">{{ settings.footer_text }}</p>
    </div>
    <div>
      <p class="footer-title">{{ 'general.footer.links' | t }}</p>
      <div class="footer-links">
        <a href="{{ routes.search_url }}">{{ 'general.search.search' | t }}</a>
        <a href="{{ routes.cart_url }}">{{ 'general.cart.cart' | t }}</a>
        <a href="/policies/refund-policy">{{ 'general.footer.returns' | t }}</a>
        <a href="/policies/privacy-policy">{{ 'general.footer.privacy' | t }}</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer Somala",
  "settings": [
    { "type": "text", "id": "footer_title", "label": "Titre", "default": "Somala" },
    { "type": "textarea", "id": "footer_text", "label": "Texte", "default": "Une sélection soignée. Une présentation luxueuse. Livraison suivie." }
  ]
}
{% endschema %}
