<section class="hero">
  <div class="container hero-grid">
    <div class="hero-card">
      <div class="kicker"><span class="dot"></span>{{ section.settings.kicker }}</div>
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      <div class="cta-row">
        {% if section.settings.primary_label != blank %}
          <a class="btn primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
        {% endif %}
        {% if section.settings.secondary_label != blank %}
          <a class="btn" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
        {% endif %}
      </div>
    </div>

    <aside class="hero-aside">
      <div class="aside-block">
        <p class="aside-title">{{ section.settings.aside_title_1 }}</p>
        <p class="aside-text">{{ section.settings.aside_text_1 }}</p>
      </div>
      <div class="aside-block">
        <p class="aside-title">{{ section.settings.aside_title_2 }}</p>
        <p class="aside-text">{{ section.settings.aside_text_2 }}</p>
      </div>
      <div class="aside-block">
        <p class="aside-title">{{ section.settings.aside_title_3 }}</p>
        <p class="aside-text">{{ section.settings.aside_text_3 }}</p>
      </div>
    </aside>
  </div>
</section>

{% schema %}
{
  "name": "Hero Luxe",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Édition Somala" },
    { "type": "text", "id": "heading", "label": "Titre", "default": "Luxe discret. Présence assurée." },
    { "type": "textarea", "id": "subheading", "label": "Sous-titre", "default": "Sélectionnez vos produits, Somala s’occupe du style. Une boutique noir, blanc & or – pensée pour une expérience premium." },
    { "type": "text", "id": "primary_label", "label": "Bouton principal", "default": "Découvrir la collection" },
    { "type": "url", "id": "primary_link", "label": "Lien bouton principal" },
    { "type": "text", "id": "secondary_label", "label": "Bouton secondaire", "default": "Notre histoire" },
    { "type": "url", "id": "secondary_link", "label": "Lien bouton secondaire" },
    { "type": "text", "id": "aside_title_1", "label": "Titre bloc 1", "default": "Sélection Curated" },
    { "type": "textarea", "id": "aside_text_1", "label": "Texte bloc 1", "default": "Ajoutez uniquement des produits qui méritent une place dans votre vitrine." },
    { "type": "text", "id": "aside_title_2", "label": "Titre bloc 2", "default": "Finition Premium" },
    { "type": "textarea", "id": "aside_text_2", "label": "Texte bloc 2", "default": "Visuels propres, descriptions sobres et pages rapides – l’élégance sans bruit." },
    { "type": "text", "id": "aside_title_3", "label": "Titre bloc 3", "default": "Livraison Suivie" },
    { "type": "textarea", "id": "aside_text_3", "label": "Texte bloc 3", "default": "Transparence sur les délais, suivi clair, service client rassurant." }
  ],
  "presets": [{"name":"Hero Luxe"}]
}
{% endschema %}
